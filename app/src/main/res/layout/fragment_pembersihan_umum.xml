<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PembersihanUmum">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image Slider -->
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="0"
                app:iss_delay="1000"
                app:iss_period="1000"
                app:iss_text_align="center"
                app:iss_title_background="@color/white" />

            <!-- Rating Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Left Side -->
                <LinearLayout
                    android:id="@+id/Level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!-- Repeatable item per rating -->
                    <!-- Contoh Rating 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_bar_bintang" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_bar_bintang" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_bar_bintang" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_bar_bintang" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_bar_bintang" />

                    </LinearLayout>
                    <!-- Copy dan ubah text "5" menjadi "4", "3", dst untuk yang lain -->

                </LinearLayout>

                <!-- Right Side: Jumlah -->
                <LinearLayout
                    android:id="@+id/jumlah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="0dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/JumlahRatingID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textColor="@color/warnabintang"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <!-- Bintang -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView android:layout_width="11dp" android:layout_height="11dp" android:src="@drawable/baseline_star_24" />
                        <ImageView android:layout_width="11dp" android:layout_height="11dp" android:src="@drawable/baseline_star_24" />
                        <ImageView android:layout_width="11dp" android:layout_height="11dp" android:src="@drawable/baseline_star_24" />
                        <ImageView android:layout_width="11dp" android:layout_height="11dp" android:src="@drawable/baseline_star_24" />
                        <ImageView android:layout_width="11dp" android:layout_height="11dp" android:src="@drawable/baseline_star_24" />
                    </LinearLayout>

                    <!-- Jumlah ulasan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="41.312"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ulasan"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tombol Ulasan -->
            <LinearLayout
                android:id="@+id/ButtonUlasanID"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/style_tulisulasan"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tulis Ulasan"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
