<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EcoTourismeGuide">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
<!--        <androidx.constraintlayout.widget.Guideline-->
<!--            android:layout_width=""-->
<!--            android:layout_height="200dp"-->
<!--            />-->


        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/PptButtonID"
            android:background="@drawable/style_registerbutton_masuk"
            android:layout_marginHorizontal="60dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/birumuda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="80dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ppt"
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:text="PPT"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/VideoButtonID"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/style_registerbutton_masuk"
            android:layout_marginHorizontal="60dp"
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/birumuda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/PptButtonID"
            android:layout_height="80dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/video"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:text="Video"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

