<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nama Tempat -->
        <TextView
            android:id="@+id/NamaTempatID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kuta"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Icon Cuaca -->
        <ImageView
            android:id="@+id/IconCuacaID"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/NamaTempatID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            tools:srcCompat="@drawable/cloudy" />

        <!-- Derajat -->
        <TextView
                android:id="@+id/DerajatID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25Â°C"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/IconCuacaID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!--Tanggal Dan jam -->

        <TextView
            android:id="@+id/TanggalDanJamID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senin April 14 | 10.00 AM"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/DerajatID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
