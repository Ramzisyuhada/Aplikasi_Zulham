<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TentangAplikasi">

    <!-- Background gambar -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kuta" />

    <!-- Overlay gelap supaya teks kontras -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Konten di tengah bisa scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#B3000000"
            android:padding="20dp"
            android:layout_gravity="center"
            android:clipToOutline="true"
            android:elevation="4dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ut"
                android:contentDescription="Logo UT" />

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIWASPADA"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Subjudul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tourism Destination Complaint and Management Application)"
                android:textColor="#E6FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Deskripsi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplikasi Pengaduan dan Pengelolaan Destinasi Pariwisata"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Tim Peneliti -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tim Peneliti:"
                android:textColor="#B7FF67"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahman Hasim, S.IP., M.Si.\nGunawan Wiradharma, S.Pd., S.I.Kom., M.Si., M.Hum.\nMario Aditya Prasetyo, S.Pd., S.I.Kom."
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Fakultas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fakultas Hukum, Ilmu Sosial, dan Ilmu Politik (FHISIP) Universitas Terbuka"
                android:textColor="#19D16F"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="12dp" />

            <!-- Tim Pengembang -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tim Pengembang Aplikasi:"
                android:textColor="#FFE27A"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zaenab Diah Febriani\nEriel Dantes\nGalih Ashari R\nRamzi Syuhada"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <!-- Perusahaan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT Hetra Teknologi Indonesia"
                android:textColor="#FF9A62"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengembangan aplikasi ini dibiayai dari dana penelitian kompetitif LPPM Universitas Terbuka Tahun 2024"
                android:textColor="#E6FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Back di pojok kiri atas -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
    android:contentDescription="Kembali"
    android:scaleType="centerInside"
    android:layout_gravity="top|start"
    app:tint="@android:color/white" />

</FrameLayout>
