<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_focused="true">
                <shape>
                    <solid android:color="#FFFFFF" /> <!-- Ganti dengan warna biru yang diinginkan -->
                    <corners android:radius="8dp"/>
                    <stroke android:width="2dp" android:color="@color/birumuda"/>
                </shape>
            </item>

            <item>
                <shape>
                    <solid android:color="#FFFFFF" /> <!-- Warna latar belakang default -->
                    <corners android:radius="8dp"/>
                    <stroke android:width="1dp" android:color="@color/gray" /> <!-- Warna border default -->
                </shape>
            </item>
        </selector>

    </item>
    <item
        android:drawable="@drawable/baseline_lock_outline_24"
        android:gravity="start|center_vertical"
        android:left="17dp"

        />

</layer-list>